<Window x:Class="ThuAo.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Nhập email đã đăng ký:"/>
        <TextBox x:Name="EmailTextBox" Margin="0 0 0 10"/>

        <Button Content="Gửi OTP" Click="SendOtp_Click" Margin="0 0 0 10"/>

        <TextBlock Text="Nhập OTP:"/>
        <TextBox x:Name="OtpTextBox" Margin="0 0 0 10"/>

        <TextBlock Text="Mật khẩu mới:"/>
        <PasswordBox x:Name="NewPasswordBox" Margin="0 0 0 10"/>

        <Button Content="Đặt lại mật khẩu" Click="ResetPassword_Click"/>
    </StackPanel>
</Window>
