<Window x:Class="ThuAo.Message_Box"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Height="200" Width="400"
        WindowStartupLocation="CenterOwner" 
        Background="#f9b8c3" BorderBrush="#7c5760" BorderThickness="2"
        WindowStyle="None" ResizeMode="NoResize">

    <Grid>
        <Border Background="#fef4ef" BorderBrush="#7c5760" BorderThickness="2" CornerRadius="15">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock x:Name="MessageTextBlock" FontSize="16" Foreground="Black" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <Button x:Name="OkButton" Content="OK" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#7c5760" Foreground="White" BorderBrush="#f9b8c3" Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
